<h2>商品編集</h2>
  <%= form_with model: @product, url: admins_product_path, local:true do |f| %>
    <div class="field">
      <%= f.label :"商品画像" %>
      <%= f.attachment_field :image %>
    </div>
    <div class="field">
      <%= f.label :"商品名" %><%= f.text_field :name, autofocus: true %>
    </div>
    <div class="field">
      <%= f.label :"商品説明" %><%= f.text_field :introduction, autofocus: true %>
    </div>
    <div class="field">
      <%= f.label :"ジャンル" %>
      <%= f.collection_select :genre_id, @genres, :id, :name, include_blank: "--選択してください--" %>
   </div>
    </div>
    <div class="field">
      <%= f.label :"税抜価格" %><%= f.text_field :price, autofocus: true %>
    </div>
    <div class="form-group">
      <%= f.label :"販売ステータス" %>
      <div>
        <%= f.radio_button :is_active, false %>
        <%= f.label :is_active, '販売停止中', value: false %>
      </div>
      <div>
        <%= f.radio_button :is_active, true %>
        <%= f.label :is_active, "販売中", value: true %>
      </div>
    </div>
    <div class="actions">
     <%= f.submit "変更を保存" %>
    </div>
  <% end %>