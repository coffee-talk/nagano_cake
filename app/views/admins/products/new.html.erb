<div class="container">
 <div class="row mx-auto">
  <h2><span class="badge badge-secondary">商品新規登録</span></h2>
 </div>
 <%= form_with model: @product, url: admins_products_path, local:true do |f| %>
  <div class= "mb-3 row mx-auto">
   <%= f.label :"商品画像" %>
    <div class= "col-sm-4">
     <%= f.attachment_field :image%>
    </div>
  </div>
  <div class= "mb-3 row mx-auto">
    <%= f.label :"商品名" %>
     <div class= "col-sm-4">
      <%= f.text_field :name, placeholder:"商品名" %>
     </div>
   </div>
  <div class= "mb-3 row mx-auto">
   <%= f.label :"商品説明" %>
    <div class= "col-sm-4">
     <%= f.text_area :introduction, placeholder:"ここに説明文を記述します" %>
    </div>
  </div>
  <div class= "mb-3 row mx-auto">
   <%= f.label :"ジャンル" %>
    <div class= "col-sm-4">
     <%= f.collection_select :genre_id, @genres, :id, :name, include_blank: "--選択してください--" %>
    </div>
  </div>
  <div class= "mb-3 row mx-auto">
   <%= f.label :"税抜価格" %>
    <div class= "col-sm-4">
     <%= f.text_field :price, placeholder:1000 %>円
    </div>
  </div>
  <div class= "mb-3 row mx-auto">
   <%= f.label :"販売ステータス" %>
    <div class= "col-sm-4">
     <%= f.radio_button :is_active, true %>
     <%= f.label :is_active, '販売中', value: true %>
     <%= f.radio_button :is_active, false %>
     <%= f.label :is_active, '販売停止中', value: false %>
    </div>
   </div>
   <div class= "mb-3 row mx-auto">
    <div class= "col-sm-4">
     <%= f.submit '新規登録', class: "btn btn-success"  %>
    </div>
   <% end %>
   </div>
</div>