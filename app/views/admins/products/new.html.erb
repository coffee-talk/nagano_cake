<h2>商品新規登録</h2>
　<%= form_with model: @product, url: new_admins_product_path, local:true do |f| %>
　 <div class="form-group">
　   <%= f.label :"商品画像" %>
     <%= f.attachment_field :image %>
   </div>
   <div class="form-group">
     <%= f.label :"商品名" %>
     <%= f.text_field :name %>
   </div>
   <div class="form-group">
     <%= f.label :"商品説明" %>
     <%= f.text_area :introduction %>
   </div>
   <div class="form-group">
     <%= f.label :"ジャンル" %>
     <%= f.collection_select :genre_id, @genres, :id, :name, include_blank: "--選択してください--" %>
   </div>
   <div class="form-group">
     <%= f.label :"税抜価格" %>
     <%= f.text_field :price %>円
   </div>
   <div class="form-group">
    <%= form.label :"販売ステータス" %>
    <div>
      <%= form.radio_button :is_active, true %>
      <%= form.label :is_active, '販売中', value: true %>
    </div>
    <div>
      <%= form.radio_button :is_active, false %>
      <%= form.label :is_active, '販売停止中', value: false %>
    </div>
   </div>
   <div class="actions">
    <%= f.submit '新規登録' %>
   </div>
  <% end %>
