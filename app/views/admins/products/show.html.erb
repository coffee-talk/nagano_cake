<div class="container">
<div class="row">
<h2><span class="badge badge-secondary">商品詳細</span></h2>
</div>
<div class="row">
 <div class="col-lg-4">
  <%= attachment_image_tag @product, :image, size: "350x250" %>
 </div>
 <div class="col-lg-8">
<table class="table table-borderless">
  <tr>
    <th>商品名</th>
    <td><%= @product.name %></td>
  </tr>
  <tr>
    <th>商品説明</th>
    <td><%= @product.introduction %></td>
  </tr>
  <tr>
    <th>ジャンル</th>
    <td><%= @product.genre.name %></td>
  </tr>
  <tr>
    <th>税込価格（税抜価格）</th>
    <td><%= @product.price.to_s(:delimited) %> (<%= @product.add_tax_price.to_s(:delimited) %>)円</td>
  </tr>
  <tr>
    <th>販売ステータス</th>
    <td>
     <% if @product.is_active %>
      <p class= "text-success">販売中</p>
     <% else %>
      <p class= "text-muted">販売停止中</p>
     <% end %>
    </td>
  </tr>
</table>
<div class= "ml-5">
  <%= link_to '編集する', edit_admins_product_path(@product), class:"btn btn-success" %>
</div>
</div>
</div>