<div class="contain">
  <div class="row">
    <h1>会員一覧</h1>
    <table>
      <thead>
        <tr>
          <th>会員</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
      <% @customers.each do |customer| %>
        <tr>
          <td><%= customer.id %></td>
          <td><%= link_to customer.full_name, admins_customer_path(customer.id) %></td>
          <td><%= customer.email %></td>
          <td>
          <% if customer.is_deleted %>
            <p>退会</p>
          <% else %>
            <p>有効</p>
          <% end %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
    <div>
      <%= paginate @customers %>
    </div>
  </div>
</div>