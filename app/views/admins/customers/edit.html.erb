<h2><%= @customer.full_name %>さんの会員編集</h2>
  <%= form_with model: @customer, url: admins_customer_path, local:true do |f| %>
    <div class="form-group">
      <%= f.label :id, "会員ID" %>
      <%= @customer.id %>
    </div>
    <div class="field">
      <%= f.label :"名前" %>
      <%= f.label :"(姓)" %><%= f.text_field :last_name, autofocus: true %>
      <%= f.label :"(名)" %><%= f.text_field :first_name, autofocus: true %>
    </div>
    <div class="field">
      <%= f.label :"フリガナ" %>
      <%= f.label :"(セイ)" %><%= f.text_field :kana_last_name, autofocus: true %>
      <%= f.label :"(メイ)" %><%= f.text_field :kana_first_name, autofocus: true %>
    </div>
    <div class="field">
      <%= f.label :"郵便番号（ハイフンなし）" %><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
    </div>
    <div class="field">
      <%= f.label :"住所" %><%= f.text_field :address, autofocus: true %>
    </div>
    <div class="field">
      <%= f.label :"電話番号（ハイフンなし）" %><%= f.text_field :phone_number, autofocus: true %>
    </div>
    <div class="field">
      <%= f.label :"メールアドレス" %><%= f.text_field :email, autofocus: true, autocomplete: "email" %>
    </div>
    <div class="form-group">
      <%= f.label :"会員ステータス" %>
      <div>
        <%= f.radio_button :is_deleted, false %>
        <%= f.label :is_deleted, '有効', value: false %>
      </div>
      <div>
        <%= f.radio_button :is_deleted, true %>
        <%= f.label :is_deleted, "退会", value: true %>
      </div>
    </div>
    <div class="actions">
     <%= f.submit "変更を保存" %>
    </div>
  <% end %>