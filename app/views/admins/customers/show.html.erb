<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0">
      <h2><span class="badge badge-secondary"><%= @customer.full_name %>さんの会員詳細</span></h2>
      <table class="table table-borderless">
        <tr>
          <th>会員ID</th>
          <td><%= @customer.id %></td>
        </tr>
        <tr>
          <th>氏名</th>
          <td><%= @customer.full_name %></td>
        </tr>
        <tr>
          <th>フリガナ</th>
          <td><%= @customer.kana_full_name %></td>
        </tr>
        <tr>
          <th>郵便番号</th>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td><%= @customer.phone_number %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>
        <tr>
          <th>会員ステータス</th>
          <td>
          <% if @customer.is_deleted %>
            <p>退会</p>
          <% else %>
            <p>有効</p>
          <% end %>
          </td>
        </tr>
        <tr>
          <th></th>
          <td><%= link_to "編集する", edit_admins_customer_path(@customer), class:"btn btn-primary" %></td>
        </tr>
      </table>
    </div>
  </div>
</div>
