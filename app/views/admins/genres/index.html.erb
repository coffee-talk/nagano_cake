<div class="container">
 <div class="row">
  <div class="mx-auto col-xl-11">
   <h2><span class="badge badge-secondary">ジャンル一覧・追加</span></h2>
  </div>
 </div>
<%= form_with model: @genre, url: admins_genres_path, local:true do |f| %>
 <div class="row">
  <div class="col-lg-3 py-4">
   <%= f.label :ジャンル名 %>
  </div>
  <div class="col-lg-3 py-4">
   <%= f.text_field :name, placeholder: "ジャンル名", class:"from-control" %>
  </div>
  <div class="col-lg-3 py-4">
   <%= f.submit '新規登録',class: "btn btn-success sign_up" %>
  </div>
  <div class="col-lg-3 py-4">
  </div>
</div>
<% end %>
<div class= "col-md-6 offset-md-1">
 <table class="table">
  <thead>
   <tr>
    <th>ジャンル</th>
     <th></th>
    </tr>
  </thead>
  <tbody>
   <% @genres.each do |genre| %>
    <tr>
     <td><%= genre.name %></td>
     <td><%= link_to "編集する", edit_admins_genre_path(genre), class: "btn btn-success sign_up" %></td>
    </tr>
    <% end %>
  </tbody>
 </table>
</div>
</div>