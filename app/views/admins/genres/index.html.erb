<h2>ジャンル一覧・追加</h2>

<%= form_with model: @genre, url: admins_genres_path, local:true do |f| %>
 <div class="form-group">
  <%= f.label :ジャンル名 %>
  <%= f.text_field :name, placeholder: "ジャンル名" %>
 </div>
 <div class="actions">
  <%= f.submit '新規登録' %>
 </div>
<% end %>

<table>
  <thead>
    <tr>
      <th>ジャンル</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td><%= link_to "編集する", edit_admins_genre_path(genre) %></td>
      </tr>
    <% end %>
  </tbody>
</table>