<h2>会員情報編集</h2>

<%=  form_with model: @customer, url: customers_path, local:true do |f| %>
  <%# = render "devise/shared/error_messages", resource: resource %>
  <%#= render "devise/shared/error_messages", resource: @customer %>
  <!--form_forの後ろの記述とエラーメッセージは後で変更する必要があるかもです。-->
  <!--form_forの後の記述のエラーメッセージは多分どっちかが使えると思います。  -->

　<div class="field">
　  <%= f.label :"氏名" %>
    <%= f.label :"(姓)" %><%= f.text_field :last_name, autofocus: true %>
    <%= f.label :"(名)" %><%= f.text_field :first_name, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :"フリガナ" %>
    <%= f.label :"(セイ)" %><%= f.text_field :kana_last_name, autofocus: true %>
    <%= f.label :"(メイ)" %><%= f.text_field :kana_first_name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :"郵便番号" %><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
  </div>

  <div class="field">
    <%= f.label :"住所" %><%= f.text_field :address, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :"電話番号（ハイフンなし）" %><%= f.text_field :phone_number, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :"メールアドレス" %><%= f.text_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="actions">
    <%= f.submit "編集内容を保存" %>
    <%= link_to "退会する", customers_quit_path %>
  </div>
<% end %>
