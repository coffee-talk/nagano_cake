<div class="container mt-5">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0">
      <div class="mb-5">
        <h2><span class="badge badge-secondary">マイページ</span></h2>
      </div>
      <h3 class="font-weight-bold ml-3">登録情報</h3>
      <div class="mb-3 ml-5">
        <%= link_to "編集する", edit_customers_path, class:"btn btn-success" %>
      </div>
      <table class="table ml-5">
        <tr>
          <th>氏名</th>
          <td><%= @customer.full_name %></td>
        </tr>
        <tr>
          <th>カナ</th>
          <td><%= @customer.kana_full_name %></td>
        </tr>
        <tr>
          <th>郵便番号</th>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td><%= @customer.phone_number %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>
      </table>
      <div>
        <h3 class="font-weight-bold ml-3 mb-3">配送先</h3>
        <%= link_to "一覧を見る", receivers_path, class:"btn btn-primary ml-5" %>
      </div>
      <div>
        <h3 class="font-weight-bold ml-3 mb-3 mt-3">注文履歴</h3>
        <%= link_to "一覧を見る", orders_path, class:"btn btn-primary ml-5" %>
      </div>
    </div>
  </div>
</div>
