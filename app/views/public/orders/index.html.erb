<div class="container">
 <div class="row">
  <div class="mx-auto col-xl-11">
   <h2><span class="badge badge-secondary">注文履歴一覧</span></h2>
  </div>
 </div>
<table border="1" class="table mt-5">
  <tr>
    <th>注文日</th>
    <th>配送先</th>
    <th>注文商品</th>
    <th>支払金額</th>
    <th>ステータス</th>
    <th>注文詳細</th>
  </tr>
  <tr>
   <% @orders.each do |order| %>
    <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
    <td>
     〒<%= order.postal_code %><br>
     <%= order.address %><br>
     <%= order.name %><br>
    </td>
    <td><%#= order.product.name %></td>
    <td><%= order.total_payment.to_s(:delimited)%>円</td>
    <td><%= order.status %></td>
    <td><%= link_to '表示する', order_path(order), class: 'btn btn-primary' %></td>
   <% end %>
  </tr>
</table>
