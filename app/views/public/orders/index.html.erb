<div class="container">
 <div class="row">
  <div class="mx-auto col-xl-11">
   <h2><span class="badge badge-secondary">注文履歴一覧</span></h2>
  </div>
 </div>
<table corder="1" class="mx-5 mt-5">
  <tr>
    <th>注文日</th>
    <th>配送先</th>
    <th>注文商品</th>
    <th>支払金額</th>
    <th>ステータス</th>
    <th>注文詳細</th>
  </tr>
  <% @orders.each do |order| %>
  <tr>
    <td><%= order.created_at %></td>
    <td><%= order.address1 %></td>
    <td><%= order.product.name %></td>
    <td><%= order.total_payment %></td>
    <td><%= order.status %></td>
    <td><%= link_to '表示する', order_path(order) %></td>
  </tr>
  <% end %>
</table>
