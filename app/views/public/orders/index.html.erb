<div class="container">
  <div class="row">
    <div class="mx-auto col-xl-11">
      <h2><span class="badge badge-secondary mt-5">注文履歴一覧</span></h2>
    </div>
  </div>
  <div class="row">
  <table border="1" class="table mt-5">
    <tr class="bg-light">
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払金額</th>
      <th>ステータス</th>
      <th>注文詳細</th>
    </tr>
    <% @orders.each do |order| %>
    <tr>
      <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
      <td>
       〒<%= order.postal_code %><br>
       <%= order.address %><br>
       <%= order.name %><br>
      </td>
      <td>
       <% order.ordered_products.each do |product| %>
       <%= product.product.name %>
       </br>
       <% end %>
       </td>
      <td><%= order.total_payment.to_s(:delimited)%>円</td>
      <td><%= order.status %></td>
      <td><%= link_to '表示する', order_path(order), class: 'btn btn-primary' %></td>
    </tr>
    <% end %>
  </table>
  </div>
  <div class ="row">
   <div cladd ="col-12 text-right">
   <%= paginate @orders %>
   </div>
  </div>
</div>