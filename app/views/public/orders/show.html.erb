<div class="container">
 <div class="row">
  <div class="mx-auto col-xl-11">
   <h2><span class="badge badge-secondary">注文履歴詳細</span></h2>
  </div>
 </div>
 <div class="row">
   <div class="col-lg-6">
     <h6 class="font-weight-bold">注文情報</h6>
 <table class="table" border="1">
        <tr>
          <th>注文日</th>
          <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
        </tr>
        <tr>
          <th>配送先</th>
          <td>
            〒<%= @order.postal_code %><br>
            <%#= @oder.address %><br>
            <%= @order.name %><br>
          </td>
        </tr>
        <tr>
          <th>支払方法</th>
          <td><%= @order.payment_method %></td>
        </tr>
        <tr>
          <th>ステータス</th>
          <td><%= @order.status %></td>
        </tr>
      </table>
    </div>
   <div class="col-lg-4">
     <h6 class="font-weight-bold">請求情報</h6>
      <table class="table" border="1">
        <tr>
          <th>商品合計</th>
          <td><%= %></td>
        </tr>
        <tr>
          <th>配送料</th>
          <td><%= %></td>
        </tr>
        <tr>
          <th>ご請求金額</th>
          <td><%=  %></td>
        </tr>
      </table>

   </div>
</div>

</div>