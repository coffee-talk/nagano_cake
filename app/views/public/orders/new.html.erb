<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0">
      <h2><span class="badge badge-secondary">注文情報入力</span></h2>
  <div>
      <h4 class="my-3 font-weight-bold">登録情報</h4>
    <%= form_with(model: @order, url: orders_comfirm_path, local: true) do |f| %>
      <div>
      <%= f.radio_button :payment_method, :クレジットカード, checked: "checked" %>
      <%= f.label :payment_method, 'クレジットカード' %>
      </div>
      <div>
      <%= f.radio_button :payment_method, :銀行振込 %>
      <%= f.label :payment_method, '銀行振込' %>
      </div>


    <h4 class="my-3 font-weight-bold">お届け先</h4>

    <%= f.radio_button :address_option, 0, checked: "checked" %>
    <%= f.label :order_address, "ご自身の住所" %>
    <%= @address.postal_code %>
    <%= @address.address %>
    <%= @address.first_name %>
    <br>
    <%= f.radio_button :address_option, 1 %>
    <%= f.label :order_address, "登録済住所から選択" %>
    <%= f.collection_select(:order_address, @receiver, :id, :address1, :include_blank => "選択してください") %>

    <br>
    <%= f.radio_button :address_option, 2 %>
    <%= f.label :order_address, "新しいお届け先" %>
    <br>

    <%= f.label :postal_code, "郵便番号" %>
    <%= f.text_field :postal_code, class:"form-control" %>
    <br>

    <%= f.label :order_address, "住所" %>
    <%= f.text_field :address, class:"form-control" %>
    <br>

    <%= f.label :order_address, "宛名" %>
    <%= f.text_field :name, class:"form-control" %>
    <br>

    <%= f.submit "確認画面へ進む" , class:"btn btn-primary" %>

    <% end %>
  </div>

    </div>
  </div>
</div>