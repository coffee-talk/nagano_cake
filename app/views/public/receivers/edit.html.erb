<div class="container">
 <div class="row">
  <div class="mx-auto col-xl-11">
   <h2><span class="badge badge-secondary">配送先編集</span></h2>
  </div>
 </div>
 <%= form_with model: @receiver, local:true do |f| %>
  <div class="mb-3 row">
   <%= f.label :"郵便番号（ハイフンなし)", class:"col-sm-3 col-form-label" %>
   <div class="col-sm-3">
    <%= f.text_field :postal_code, class:"form-control" %>
   </div>
  </div>
  <div class="mb-3 row">
   <%= f.label :"住所", class:"col-sm-3 col-form-label" %>
   <div class="col-sm-8">
    <%= f.text_field :address, class:"form-control" %>
   </div>
  </div>
  <div class="mb-3 row">
   <%= f.label :"宛名", class:"col-sm-3 col-form-label" %>
   <div class="col-sm-3">
    <%= f.text_field :name, class:"form-control" %>
   </div>
   <div class="col-sm-3">
    <%= f.submit '変更内容を保存', class: "btn btn-success sign_up" %>
   </div>
  </div>
 <% end %>
</div>