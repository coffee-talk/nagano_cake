<h1>配送先編集</h1>

<div>
  <%= form_with model:@receiver, local:true do |f| %>

  <h4>郵便番号（ハイフンなし）</h4>
  <%= f.text_field :postal_code, autofocus: true, placeholder: "郵便番号" %>

  <h4>住所</h4>
  <%= f.text_field :address, placeholder: "住所" %>

  <h4>宛名</h4>
  <%= f.text_field :name placeholder: "宛名" %>

  <%= f.submit '変更内容を保存' %>
  
  <% end %>
</div>