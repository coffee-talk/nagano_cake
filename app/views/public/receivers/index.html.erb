<div>
  <h2>配送先登録/一覧</h2>
  <div>
    <%= form_with model:@receiver, local:true do |f| %>

    <h4>郵便番号（ハイフンなし）</h4>
    <%= f.text_field :postal_code %>

    <h4>住所</h4>
    <%= f.text_field :address %>

    <h4>宛名</h4>
    <%= f.text_field :name %>

    <%= f.submit '新規登録' %>

    <% end %>
  </div>
</div>

 <table border="1">
   <tr>
     <th>郵便番号</th>
     <th>住所</th>
     <th>宛名</th>
     <th>         </th>
   </tr>
   <% @receivers.each do |receiver| %>
   <tr>
     <td><%= postal_code %></td>
     <td><%= address %></td>
     <td><%= name %></td>
     <td>
       <%= link_to "編集する", receiver_path, class:"btn btn-sm btn-success" %>
       <%= link_to "削除する", receiver_path, method: :delete, class:"btn btn-sm btn-danger" %>
    </td>
   </tr>
   <% end %>
 </table>